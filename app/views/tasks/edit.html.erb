<%= form_with model: [@category, @task], scope: :task, url: category_task_path(@category.id), method: :patch, local: true do |f| %>
    
  <% if @task.errors.any? %>
      <div style="color: red">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
          <% @task.errors.each do |error| %>
          <li><%= error.full_message %></li>
          <% end %>
      </ul>
      </div>
  <% end %>
  <h1>Edit Task</h1><br>
  
  <%= f.label 'Task Title', class:"form-label" %><br>
  <%= f.text_field :name, class: "form-control" %><br>

  <%= f.label 'Task Details', class:"form-label" %><br>
  <%= f.text_area :details, class: "form-control" %><br>

  <%= f.label :due_date, class:"form-label" %><br/>
  <%= f.date_field :due_date, :value => Date.today.strftime('%Y-%m-%d'), class: "form-control" %><br>


  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>