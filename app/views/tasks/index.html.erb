<table class="table fs-5">
  <thead>
    <tr>
      <th>Task</th>
      <th>Details</th>
      <th>Due_Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.details %></td>
        <td><%= task.due_date.to_s %></td>
        <td><%= link_to 'Show Details', category_task_path(@category.id, task.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_category_task_path(@category), class: "btn btn-primary" %>
<%= link_to "Back to categories", categories_path, class: "btn btn-secondary" %> 