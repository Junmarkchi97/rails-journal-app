<%= form_with model: [@category, @task], local: true do |f| %>
  <p>
      <% if @task.errors.any? %>
          <ul>
              <% @task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
      <% end %>
  </p>

  <p>
      <%= f.label :task_name, class:"form-label" %><br/>
      <%= f.text_field :name, class: "form-control" %>
  </p>
  <p>
      <%= f.label :details, class:"form-label" %><br/>
      <%= f.text_area :details, class: "form-control" %>
  </p>
  <p>
      <%= f.label :due_date, class:"form-label" %><br/>
      <%= f.date_field :due_date, :value => Date.today.strftime('%Y-%m-%d'), class: "form-control" %>
  </p>

  <p>
      <%= f.submit "Add Task", class: "btn btn-primary" %>
      <%= link_to "Back to tasks", category_tasks_path, class: "btn btn-secondary mx-2" %> 
  </p>
<% end %>